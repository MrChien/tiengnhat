<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="15dip"
    android:paddingLeft="15dip"
    android:paddingTop="15dip" >

    <TextView
        android:id="@+id/english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="32dip"
        android:layout_marginTop="23dp"
        android:singleLine="true"
        android:text="Pham Ke"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pinyin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/english"
        android:layout_below="@+id/english"
        android:singleLine="true"
        android:text="Tu Liem, Ha Noi" />

    <TextView
        android:id="@+id/japanese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/english"
        android:layout_below="@+id/pinyin"
        android:singleLine="true"
        android:text="Tu Liem, Ha Noi" />

    <TextView
        android:id="@+id/vietnamese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/english"
        android:layout_below="@+id/japanese"
        android:singleLine="true"
        android:text="Tu Liem, Ha Noi" />

    <Button
        android:id="@+id/btPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/english"
        android:background="@drawable/ic_audio"
        android:onClick="docAt" />

</RelativeLayout>