<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dip"
    android:layout_marginLeft="23dp"
    android:layout_marginRight="32dip"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/edtid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:text="Pham Ke"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/category_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/edtid"
        android:singleLine="true"
        android:text="Pham Ke"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/category_id"
        android:singleLine="true"
        android:text="ccc"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pinyin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/english"
        android:layout_below="@+id/english"
        android:singleLine="true"
        android:text="Tu Liem, Ha Noi"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/japanese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/english"
        android:layout_below="@+id/pinyin"
        android:singleLine="true"
        android:text="Tu Liem"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/vietnamese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/english"
        android:layout_below="@+id/japanese"
        android:singleLine="true"
        android:text="Tu i"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/english"
        android:layout_marginRight="10dp"
        android:textSize="20dp" />

</RelativeLayout>